<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Nombre del Usuario -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/textUsuario"
            style="@style/TextViewStyleNegrita"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Usuario:"
            />

        <TextView
            android:id="@+id/textNombreUsuario"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Nombre Usuario"
            android:layout_weight="1"
            style="@style/TextViewStyle"/>

    </LinearLayout>

    <!-- Nombre del personaje -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/textNombre"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:text="Nombre del personaje:"
            android:layout_weight="1"
            style="@style/TextViewStyleNegrita"/>

        <EditText
            android:id="@+id/editNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:hint="Ingrese el nombre"
            style="@style/EditTextStyle"/>

    </LinearLayout>

    <!-- Fuerza -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/textFuerza"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="Fuerza:"
            android:layout_weight="1"
            style="@style/TextViewStyleNegrita"/>

        <EditText
            android:id="@+id/editFuerza"
            style="@style/EditTextStyle"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:hint="Ingrese la fuerza" />

    </LinearLayout>

    <!-- Destreza -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/textDestreza"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="Destreza:"
            android:layout_weight="1"
            style="@style/TextViewStyleNegrita"/>

        <EditText
            android:id="@+id/editDestreza"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:hint="Ingrese la Destreza"
            style="@style/EditTextStyle"/>

    </LinearLayout>
    <!-- Constitucion -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/textConstitucion"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="Constitucion:"
            android:layout_weight="1"
            style="@style/TextViewStyleNegrita"/>

        <EditText
            android:id="@+id/editConstitucion"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:hint="Ingrese la Constitucion"
            style="@style/EditTextStyle"/>

    </LinearLayout>
    <!-- Inteligencia -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/textInteligencia"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="Inteligencia:"
            android:layout_weight="1"
            style="@style/TextViewStyleNegrita"/>

        <EditText
            android:id="@+id/editInteligencia"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:hint="Ingrese la Inteligencia"
            style="@style/EditTextStyle"/>

    </LinearLayout>
    <!-- Sabiduria -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/textSabiduria"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="Sabiduria:"
            android:layout_weight="1"
            style="@style/TextViewStyleNegrita"/>

        <EditText
            android:id="@+id/editSabiduria"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:hint="Ingrese la Sabiduria"
            style="@style/EditTextStyle"
            />

    </LinearLayout>
    <!-- Carisma -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/textCarisma"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="Carisma:"
            android:layout_weight="1"
            style="@style/TextViewStyleNegrita"/>

        <EditText
            android:id="@+id/editCarisma"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:hint="Ingrese la Carisma"
            style="@style/EditTextStyle"/>

    </LinearLayout>
    <!-- Competencia -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/textCompetencia"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="Competencia:"
            android:layout_weight="1"
            style="@style/TextViewStyleNegrita"/>

        <EditText
            android:id="@+id/editCompetencia"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:hint="Ingrese la Competencia"
            style="@style/EditTextStyle"/>

    </LinearLayout>
    <!-- Foto -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/textFoto"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="URL de la foto:"
            android:layout_weight="1"
            style="@style/TextViewStyleNegrita"/>

        <EditText
            android:id="@+id/editFoto"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:hint="Ingrese la URL"
            style="@style/EditTextStyle"/>

    </LinearLayout>

    <!-- Botones -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="2dp">

        <Button
            android:id="@+id/btnVolver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Volver"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            style="@style/ButtonStyle"/>

        <Button
            android:id="@+id/btnConfirmar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirmar"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            style="@style/ButtonStyle"/>

    </LinearLayout>

</LinearLayout>

